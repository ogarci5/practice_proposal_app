<h4 class="center">New Proposal</h4>
<div class="form">
<%= form_for(@proposal) do |f|%>
  <div>
		<%= render 'shared/error_messages' %>
    <%= f.label :name %>
    <%= f.text_field :name %>

	  <%= f.label :to%>
	  <%= collection_select(:response, :user_id, User.all, :id, :name) %>
			
    <%= f.label :description %>
    <%= f.text_area :description, style: "height:80px;resize:none;" %>
    <br />
      
	  <div class="btn-group-vertical btn-group">
   	  <%= f.submit "Create Proposal", class: "btn" %>
			<button class="btn"><%=link_to "Back", root_path%></button>
	  </div>
  </div>
<% end %>
</div>